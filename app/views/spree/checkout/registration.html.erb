<%= render partial: 'spree/shared/error_messages', locals: { target: @user } %>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= Spree.t(:registration) %>
  </div>

  <div class="panel-body">
    <div id="registration" class="row" data-hook>
      <div id="account" class="col-md-4">
        <div class="col-md-12 ">
          <%= render template: 'spree/user_sessions/new_checkout' %>  
        </div>
      </div>
      <% if Spree::Config[:allow_guest_checkout] %>
        <div id="guest_checkout" data-hook class="row">
          <div class="col-md-4 col-md-offset-2">
            <div class="alert alert-info">
              <%= Spree.t(:guest_user_account) %>
            </div>
            <% if flash[:registration_error] %>
              <div class='flash error'><%= flash[:registration_error] %></div>
            <% end %>
            <%= form_for @order, url: update_checkout_registration_path, method: :put, html: { id: 'checkout_form_registration' } do |f| %>
              <div class="form-group">
                <%= f.label :email, Spree.t(:email) %>
                <%= f.email_field :email, class: 'title form-control' %>
              </div>
              <div class="actions">
                <%= f.submit Spree.t(:continue), class: 'btn btn-primary btn-block' %>                
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div><!-- div.row -->
  </div><!-- div.panel-body -->
</div><!-- div.panel-default -->