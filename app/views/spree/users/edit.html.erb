<%= render partial: 'spree/shared/error_messages', locals: { target: @user } %>

<div class="row col-md-6 col-md-offset-3">
<div id="edit-account" class="panel panel-default">
  <div class="panel-heading"><%= Spree.t(:edit_user) %></div>

  <div data-hook="account_edit" class="panel-body">
    <%= form_for Spree::User.new, as: @user, url: spree.user_path(@user), method: :put do |f| %>
      <%= render partial: 'spree/shared/user_form', locals: { f: f } %>
      <p>
        <%= f.submit Spree.t(:update), class: 'button primary btn btn-success btn-block' %>
      </p>
    <% end %>
  </div>
</div>
</div>